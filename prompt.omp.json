{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 4,
  "console_title_template": "{{ if .Root }}\u26a1 {{ end }}{{ .Folder }}{{ if .Segments.Session.SSHSession }}@{{ .HostName }}{{ end }}",
  "final_space": true,
  "pwd": "osc99",
  "palette": {
    "text": "#211717",
    "darkest": "#6F4E37",
    "dark": "#A67B5B",
    "mid": "#ECB176",
    "light": "#FED8B1"
  },
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "os",
          "style": "plain",
          "foreground": "p:light",
          "background": "transparent",
          "template": "{{ if .Root }}\uf0e7 {{ end }}{{ .Icon }}"
        },
        {
          "type": "session",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "foreground": "p:text",
          "background": "p:mid",
          "template": " {{ if .SSHSession }}\uf817{{ else }}\uf503{{ end }} {{ .UserName }}@{{ .HostName }} "
        },
        {
          "type": "path",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "foreground": "p:text",
          "background": "p:light",
          "options": {
            "style": "full"
          },
          "template": " \uf07c {{ if .Segments.Session.SSHSession }}{{ .Path }}{{ else }}{{ path .Path .Location }}{{ end}} "
        },
        {
          "type": "git",
          "style": "diamond",
          "leading_diamond": "<transparent>\ue0b0</>",
          "trailing_diamond": "\ue0b0",
          "foreground": "p:text",
          "background": "p:mid",
          "options": {
            "branch_icon": "\ue725"
          },
          "template": " {{ regexReplaceAll \"^(.)(.*)\" .HEAD \"$1 $2\" }} "
        },
        {
          "type": "status",
          "style": "diamond",
          "leading_diamond": " \ue0b6",
          "trailing_diamond": "\ue0b4",
          "foreground": "#FCF0C8",
          "background": "#911F27",
          "template": "\ue20f {{ .String }}"
        }
      ]
    },
    {
      "type": "rprompt",
      "segments": [
        {
          "type": "executiontime",
          "style": "plain",
          "foreground": "p:mid",
          "background": "transparent",
          "options": {
            "threshold": 500,
            "style": "austin"
          },
          "template": " <p:dark>\ufbab</> {{ .FormattedMs }}"
        }
      ]
    }
  ]
}
