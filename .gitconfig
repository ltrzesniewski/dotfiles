[core]
	pager = delta

[fetch]
	prune = true

[pull]
	rebase = true

[rebase]
	autoStash = false
	autosquash = false
	updateRefs = false

[alias]
	mylog = "log --author='Lucas Trzesniewski' --all --date-order --format='%C(#6F4E37)%h  %C(#A67B5B)%as%C(reset)  %s'"

[format]
	pretty = simple

[pretty]
	simple = "%C(#6F4E37)%h  %C(#A67B5B)%as  %<(25)%C(#ECB176)%an%C(reset)  %s"

[interactive]
	diffFilter = delta --color-only

[merge]
	# conflictStyle = zdiff3

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[delta]
	navigate = true
	side-by-side = true
	hyperlinks = true
	hyperlinks-file-link-format = "vscode://file/{path}:{line}"
	hunk-header-style = omit
